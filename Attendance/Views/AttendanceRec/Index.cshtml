@model Attendance.ViewModels.EmployeesAttendancesViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация посещений</h2>

    <table class="table">
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Должность</th>
            <th>Дата</th>
            <th>Время прихода</th>
            <th></th>
            <th>Время ухода</th>
            <th></th>
        </tr>


        @foreach (var employee in Model.Employees)
        {
        <tr>
            @using (Html.BeginForm("SaveTime", "AttendanceRec"))
            {
            <td>@employee.Surname</td>
            <td>@employee.Name</td>
            <td>@employee.Patronymic</td>
            <td>@employee.Position</td>
            <td>@Html.TextBoxFor(m => Model.Date, new { @class = "form-control" })</td>
            <td>@Html.TextBoxFor(m => Model.TimeInInput, new { @class = "form-control" })</td>
            <td>
                <button type="submit" name="SaveTimeIn" class="btn btn-primary">Сохранить</button>
            </td>
            <td>@Html.TextBoxFor(m => Model.TimeOutInput, new { @class = "form-control" })</td>
            <td>
                <button type="submit" name="SaveTimeOut" class="btn btn-primary">Сохранить</button>
                <input type="hidden" value="@employee.Id" name="EmpId" />
            </td>
            }
        </tr>

        }

    </table>